extends ../layout-home
block content
    .container
        .row
            .col-md-12
                h3 Peer Listing
        .row
            .col-md-12
                if Peers
                    table(class='table table-hover table-condensed')
                        tr
                            th Name
                            th Description
                            th IP
                            th
                            th
                            th
                        each Peer in Peers
                            tr(data-id="#{Peer.id}" data-model="Peer")
                                td #{Peer.name}
                                td #{Peer.description}
                                td #{Peer.ip}
                                td
                                    a(href="/peer/show?id=#{Peer.id}"  class="btn btn-primary btn-sm" role="button") Show
                                td
                                    a(href="/peer/edit?id=#{Peer.id}"  class="btn btn-primary btn-sm" role="button") Edit
                                td
                                    form(action="/peer/destroy" method="POST")
                                        //input(type="hidden" name="_method" value="delete")
                                        input(type="hidden" name="id" value="#{Peer.id}")
                                        input(type="submit" value="Delete"  class="btn btn-danger btn-sm" role="button")

        .row
            .col-md-12
                a(href="/peer/new/" class="btn btn-success btn-sm" role="button") New

        hr
